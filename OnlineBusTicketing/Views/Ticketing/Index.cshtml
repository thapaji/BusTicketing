@model OnlineBusTicketing.Models.Departure
@section scripts {
    <script type="text/javascript">
        $(function () {
            $('#DepartureDate').datetimepicker({
                defaultDate: '@Model.DepartureDate',
                format: 'll',
                showClose: true,
                showClear: true,
                toolbarPlacement: 'top'
            });
        });
    </script>
}
<div class="jumbotron">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <p>
        @Html.Label("From : ")
        @Html.TextBox(name: "from")
        @Html.Label("To : ")
        @Html.TextBox(name: "to")
        <input type="button" value="Search" />
    </p>

    <div class="form-group">
        @Html.LabelFor(model => model.DepartureDate,
        htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.DepartureDate,
           new
           {
               htmlAttributes = new
               {
                   @Value = Model.DepartureDate.ToString("MMM/dd/yyyy"),
                   @class = "form-control"
               },
           })
            @Html.ValidationMessageFor(model => model.DepartureDate, "", new { @class = "text-danger" })
        </div>
    </div>
</div>

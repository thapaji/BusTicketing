@model OnlineBusTicketing.Models.Ticketing

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Ticketing</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.NoOfSeat, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NoOfSeat)
                @Html.ValidationMessageFor(model => model.NoOfSeat)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TicketNo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TicketNo)
                @Html.ValidationMessageFor(model => model.TicketNo)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StationId, "StationId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("StationId", String.Empty)
                @Html.ValidationMessageFor(model => model.StationId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

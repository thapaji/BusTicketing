@model OnlineBusTicketing.Models.Route


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Route</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Price, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Price)
                @Html.ValidationMessageFor(model => model.Price)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FromCityId, "FromCityId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FromCityId", String.Empty)
                @Html.ValidationMessageFor(model => model.FromCityId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ToCityId, "ToCityId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ToCityId", String.Empty)
                @Html.ValidationMessageFor(model => model.ToCityId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
